<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dev.voleum.ordermolder">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="dev.voleum.ordermolder.OrderMolder"

        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.orders.OrderActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.cashreceipts.CashReceiptActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.general.DocListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.catalogs.CatalogActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.catalogs.CatalogListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.orders.GoodsChooserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.cashreceipts.ObjectsChooserActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>