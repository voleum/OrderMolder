<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="entries"
            type="java.util.List" />

        <variable
            name="selectedItemPosition"
            type="java.lang.Integer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_company_label"
            style="@style/Widget.OrderMolder.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/object_company" />

        <Spinner
            android:id="@+id/spinner_companies"
            style="@style/Widget.OrderMolder.Spinner.RoundedColored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:entries="@{entries}" />
<!--            app:selectedItemPosition="@={selectedItemPosition}" />-->

    </LinearLayout>
</layout>