<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_create_test_data"
        android:layout_width="146dp"
        android:layout_height="146dp"
        android:layout_margin="16dp"
        android:width="48dp"
        android:height="48dp"
        android:onClick="onClick"
        android:text="TEST DATA"
        app:icon="@drawable/ic_add_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_exchange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_exchange"
        android:layout_width="146dp"
        android:layout_height="146dp"
        android:layout_margin="16dp"
        android:onClick="onClick"
        android:text="@string/button_exchange"
        app:icon="@drawable/ic_cached_24px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_create_test_data"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>