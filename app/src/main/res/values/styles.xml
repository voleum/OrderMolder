<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="tabStyle">@style/Widget.MaterialComponents.TabLayout.PrimarySurface</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar.Primary" />

    <style name="AppTheme.ToolbarOverLay.Surface" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Preference_TextAppearanceMaterialSubhead" />

    <style name="Widget.OrderMolder.Button.Circle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">@dimen/rounded_button_stroke_width</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.OrderMolder.Button.Circle</item>
    </style>

    <style name="Widget.OrderMolder.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/rounded_textview_text_size</item>
        <item name="android:padding">@dimen/rounded_textview_padding</item>
        <item name="android:layout_margin">@dimen/rounded_textview_margin</item>
<!--        API >=26-->
<!--        <item name="android:layout_marginHorizontal">@dimen/rounded_textview_margin</item>-->
    </style>

    <style name="Widget.OrderMolder.TextView.RoundedColored">
        <item name="android:background">@drawable/shape_rounded_textview</item>
    </style>

    <style name="Widget.OrderMolder.Spinner" parent="Widget.AppCompat.TextView.SpinnerItem" />
    <style name="Widget.OrderMolder.Spinner.RoundedColored">
        <item name="android:padding">@dimen/rounded_spinner_padding</item>
        <item name="android:background">@drawable/shape_rounded_spinner</item>
        <item name="android:textAppearance">@style/TextAppearance.OrderMolder.Widget.TextView.SpinnerItem</item>
    </style>

    <style name="TextAppearance.OrderMolder.Widget.TextView.SpinnerItem" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem" />

    <style name="ShapeAppearance.OrderMolder.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/rounded_button_corner_radius</item>
    </style>

    <style name="ShapeAppearanceOverlay.OrderMolder.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
